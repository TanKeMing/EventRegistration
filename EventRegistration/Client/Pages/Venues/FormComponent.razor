<EditForm Model="@venue" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Venue name: </label>
            <div>
                <InputText @bind-Value="@venue.Venuename" class="form-control" />
                <ValidationMessage For="@(() => venue.Venuename)" />
            </div>
        </div>

        <div class="form-group">
            <label>Venue address: </label>
            <div>
                <InputText @bind-Value="@venue.Venueaddress" class="form-control" />
                <ValidationMessage For="@(() => venue.Venueaddress)" />
            </div>
        </div>

        <div class="form-group">
            <label>Venue description </label>
            <div>
                <InputText @bind-Value="@venue.Venuedescription" class="form-control" />
                <ValidationMessage For="@(() => venue.Venuedescription)" />
            </div>
        </div>
        </fieldset>
        @if (!Disabled)
        {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
        }

        <EventRegistration.Client.Component.BackToList Target="venues" />

</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Venue venue { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; } }
